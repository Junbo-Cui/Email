<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#dbdbdb"
        android:orientation="horizontal">
        <Button
            android:id="@+id/softkey_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/bottom_new"
            android:background="@null"
            android:layout_weight="1"
            android:textColor="#3C3C3C"
            android:paddingLeft="8dp"
            android:gravity="left|center_vertical"
            android:textAllCaps="false"
            android:fontFamily="sans-serif"
            android:focusable="false"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/softkey_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/bottom_select"
            android:background="@null"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#3C3C3C"
            android:focusable="false"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_rsk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false"
                android:gravity="right"
                android:paddingRight="2dp"
                android:visibility="gone"
                android:scaleType="fitEnd"
                android:adjustViewBounds="true"
                android:src="@drawable/option"/>

    <Button
        android:id="@+id/softkey_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="8px"
        android:background="@null"
        android:focusable="false"
        android:fontFamily="sans-serif"
        android:gravity="center_vertical|right"
        android:text="@string/bottom_options"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:importantForAccessibility="no"
        android:textSize="16px" />
         </LinearLayout>
    </LinearLayout>
</RelativeLayout>